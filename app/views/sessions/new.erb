<!-- LOGIN SCREEN. Yields directly from layout.erb, so its structure is equivalent to activities/index
  Successful login will redirect to users/id (show user's personal home page)
  ===========================================================================
  takes @user as a variable (defaults to previous login attempt or User.new)
    Need to collect parameters 
        :username
        :password
    and POST to '/sessions' -->

<section id="main-content" <%= session[:user_id] ? "class='logged-in'" : "" %>>
  <section class="wrapper site-min-height">

    <div class="login_page">

    <div class="doge"></div>


      <div class="login_form">
 
        <!-- collects input for login -->
          <form action = "/sessions" method = "post">
            <div>
              <label>Username:</label>
              <input type="text" value="<%= @user.username %>" name="username" >
            </div>
            <div>
              <label>Password:</label>
              <input type="password" name="password">
            </div>
            <div>
              <input type="submit" value="Submit">
            </div>

          </form>
        <!-- end input form -->

         </div>
         </div>



</section>
</section>



