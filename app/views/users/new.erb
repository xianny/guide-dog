<!-- This template generates a signup form
  This yields directly from layout.erb, so its structure is equivalent to index.erb 
    Takes @user as an instance variable
    Needs to collect params
      :username
      :password
      :password_confirmation
      :email (optional)
      :email_confirmation
    and POST to '/users'
  -->

  <!-- If submission was invalid, will display error messages. 
  This <div> will not be rendered at all if there are no errors -->
    <% if @user.errors.any? %>
      <div class="errors">
        <strong>Some issues with your submission, please fix them:</strong>
        <ul>
          <% @user.errors.full_messages.each do |error_message| %>
            <li><%= error_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  <!-- end errors -->

  <!-- collects input for new user -->
    <form action = "/users" method = "post">
      <div>
        <label>Username:</label>
        <input type="text" value="<%= @user.username %>" name="username" >
      </div>
      <div>
        <label>Password:</label>
        <input type="password" name="password">
      </div>
      <div>
        <label>Verify password:</label>
        <input type="password" name="password_confirmation">
      </div>
      <div>
        <label>Email (optional):</label>
        <input type="text" value="<%= @user.email %>" name="email">
      </div>
      <div>
        <label>Email Confirmation:</label>
        <input type="text" value="<%= @user.email %>" name="email_confirmation">
      </div>
      <div>
        <input type="submit" value="Submit">
      </div>

    </form>
  <!-- end input form -->